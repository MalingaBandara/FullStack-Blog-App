<script>
  const heroImages = [
    "https://cdn.pixabay.com/photo/2024/07/14/13/45/ai-generated-8894578_1280.jpg",
    "https://cdn.pixabay.com/photo/2020/11/18/10/40/laptop-5754927_960_720.jpg",
    "https://cdn.pixabay.com/photo/2020/05/31/09/21/bushcraft-5241935_1280.jpg",
    "https://cdn.pixabay.com/photo/2016/11/29/09/32/auto-1868726_1280.jpg"
  ];

  const layers = document.querySelectorAll(".hero-bg-fade");
  let imageIndex = Math.floor(Math.random() * heroImages.length);
  let activeLayer = 0;

  // Set initial image
  layers[activeLayer].style.backgroundImage =
    `url('${heroImages[imageIndex]}')`;

  setInterval(() => {
    const nextLayer = activeLayer === 0 ? 1 : 0;
    imageIndex = (imageIndex + 1) % heroImages.length;

    layers[nextLayer].style.backgroundImage =
      `url('${heroImages[imageIndex]}')`;

    layers[activeLayer].classList.remove("active");
    layers[nextLayer].classList.add("active");

    activeLayer = nextLayer;
  }, 5000); // ‚è± 5 seconds
</script>


