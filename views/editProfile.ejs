<%- include('partials/header', { title: 'Edit Profile', user: user }) %>

<style>
/* Edit Profile Page Styles */
.edit-profile-page {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
    padding: 60px 0;
}

.edit-profile-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
}

.edit-profile-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    animation: fadeInUp 0.6s ease-out;
}

.edit-profile-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40px 50px;
    color: white;
    position: relative;
}

.edit-profile-header::after {
    content: '';
    position: absolute;
    bottom: -30px;
    left: 0;
    right: 0;
    height: 30px;
    background: white;
    border-radius: 50% 50% 0 0 / 100% 100% 0 0;
}

.edit-profile-header h1 {
    font-size: 36px;
    font-weight: bold;
    margin: 0 0 10px 0;
    display: flex;
    align-items: center;
    gap: 15px;
}

.edit-profile-header h1 i {
    font-size: 32px;
}

.edit-profile-header p {
    margin: 0;
    opacity: 0.9;
    font-size: 16px;
}

.edit-profile-body {
    padding: 60px 50px 50px;
}

.back-to-profile {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    margin-bottom: 30px;
    transition: all 0.3s ease;
    font-size: 16px;
}

.back-to-profile:hover {
    color: #764ba2;
    transform: translateX(-5px);
}

.back-to-profile i {
    font-size: 18px;
}

/* Profile Picture Section */
.profile-picture-section {
    text-align: center;
    margin-bottom: 40px;
    padding: 30px;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 15px;
}

.profile-picture-wrapper {
    position: relative;
    display: inline-block;
    margin-bottom: 20px;
}

.current-profile-pic {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid white;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
}

.profile-picture-wrapper:hover .current-profile-pic {
    transform: scale(1.05);
}

.change-picture-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(102, 126, 234, 0.9);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    cursor: pointer;
}

.profile-picture-wrapper:hover .change-picture-overlay {
    opacity: 1;
}

.change-picture-overlay i {
    color: white;
    font-size: 36px;
}

.upload-button-wrapper {
    position: relative;
    display: inline-block;
}

.btn-upload-picture {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 12px 30px;
    border-radius: 50px;
    border: none;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 10px;
}

.btn-upload-picture:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
}

.file-input-hidden {
    display: none;
}

.picture-hint {
    margin-top: 15px;
    font-size: 14px;
    color: #6c757d;
}

/* Form Fields */
.profile-form-group {
    margin-bottom: 30px;
}

.profile-form-label {
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 16px;
}

.profile-form-label i {
    color: #667eea;
    font-size: 16px;
}

.profile-form-label .required {
    color: #dc3545;
    margin-left: 3px;
}

.profile-input {
    width: 100%;
    padding: 14px 20px;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #f8f9fa;
}

.profile-input:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
}

.profile-textarea {
    width: 100%;
    padding: 14px 20px;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    font-size: 16px;
    font-family: inherit;
    resize: vertical;
    min-height: 120px;
    transition: all 0.3s ease;
    background: #f8f9fa;
    line-height: 1.6;
}

.profile-textarea:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
}

.char-counter {
    text-align: right;
    font-size: 13px;
    color: #6c757d;
    margin-top: 5px;
}

.form-hint {
    font-size: 14px;
    color: #6c757d;
    margin-top: 5px;
    display: flex;
    align-items: center;
    gap: 5px;
}

.form-hint i {
    color: #667eea;
    font-size: 13px;
}

/* Form Actions */
.profile-form-actions {
    display: flex;
    gap: 15px;
    padding-top: 30px;
    border-top: 1px solid #e9ecef;
}

.btn-profile-submit {
    flex: 1;
    padding: 14px 30px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 50px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
}

.btn-profile-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.btn-profile-cancel {
    padding: 14px 30px;
    background: white;
    border: 2px solid #667eea;
    border-radius: 50px;
    color: #667eea;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
}

.btn-profile-cancel:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
}

/* Preview Badge */
.preview-badge {
    display: inline-block;
    background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    color: white;
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    margin-top: 10px;
}

/* Success Message */
.success-message {
    background: #d4edda;
    border: 2px solid #c3e6cb;
    color: #155724;
    padding: 15px 20px;
    border-radius: 12px;
    margin-bottom: 25px;
    display: flex;
    align-items: center;
    gap: 12px;
    animation: slideDown 0.5s ease-out;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.success-message i {
    font-size: 20px;
}

/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    .edit-profile-page {
        padding: 30px 0;
    }
    
    .edit-profile-header {
        padding: 30px 25px;
    }
    
    .edit-profile-header h1 {
        font-size: 28px;
    }
    
    .edit-profile-body {
        padding: 40px 25px 30px;
    }
    
    .profile-form-actions {
        flex-direction: column;
    }
    
    .btn-profile-submit,
    .btn-profile-cancel {
        width: 100%;
        justify-content: center;
    }
    
    .current-profile-pic {
        width: 120px;
        height: 120px;
    }
}

@media (max-width: 576px) {
    .edit-profile-header h1 {
        font-size: 24px;
        flex-direction: column;
        gap: 10px;
    }
    
    .profile-picture-section {
        padding: 20px;
    }
    
    .current-profile-pic {
        width: 100px;
        height: 100px;
    }
}
</style>

<div class="edit-profile-page">
  <div class="edit-profile-container">
    
    <!-- Back Link -->
    <a href="/user/profile" class="back-to-profile">
      <i class="fas fa-arrow-left"></i>
      <span>Back to Profile</span>
    </a>

    <!-- Edit Profile Card -->
    <div class="edit-profile-card">
      
      <!-- Header -->
      <div class="edit-profile-header">
        <h1>
          <i class="fas fa-user-edit"></i>
          Edit Profile
        </h1>
        <p>Update your personal information and profile picture</p>
      </div>

      <!-- Body -->
      <div class="edit-profile-body">

        <!-- Success Message -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="success-message">
            <i class="fas fa-check-circle"></i>
            <span><%= success %></span>
            </div>
        <% } %>

        <!-- Error Message (if you have errors too) -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="auth-alert auth-alert-danger">
            <i class="fas fa-exclamation-circle"></i>
            <span><%= error %></span>
            </div>
        <% } %>
        
        <form action="/user/edit" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()" >
          
          <!-- Profile Picture Section -->
          <div class="profile-picture-section">
            <div class="profile-picture-wrapper">
              <% if (user.profilePicture && user.profilePicture.url) { %>
                <img src="<%= user.profilePicture.url %>" alt="Profile Picture" class="current-profile-pic" id="currentProfilePicture" />
              <% } else { %>
                <img
                  src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="Default Profile"
                  class="current-profile-pic" id="currentProfilePicture"
                />
              <% } %>
              <div class="change-picture-overlay" onclick="document.getElementById('profilePicture').click()">
                <i class="fas fa-camera"></i>
              </div>
            </div>
            
            <img id="image-preview" class="current-profile-pic" style="display: none;" />
            <div id="preview-badge" class="preview-badge" style="display: none;">
              <i class="fas fa-check"></i> New Picture Selected
            </div>
            
            <div class="upload-button-wrapper">
              <button type="button" class="btn-upload-picture" onclick="document.getElementById('profilePicture').click()">
                <i class="fas fa-cloud-upload-alt"></i>
                <span>Change Profile Picture</span>
              </button>
              <input class="file-input-hidden" type="file" name="profilePicture" id="profilePicture" accept="image/*" onchange="previewImage()" />
            </div>
            
            <p class="picture-hint">
              <i class="fas fa-info-circle"></i>
              Supported formats: JPG, PNG (Max 5MB)
            </p>
          </div>

          <!-- Username Field -->
          <div class="profile-form-group">
            <label for="username" class="profile-form-label">
              <i class="fas fa-user"></i>Username<span class="required">*</span>
            </label>
            <input type="text" class="profile-input" name="username" id="username" value="<%= user.username %>" placeholder="Enter your username" required maxlength="50" />
            <div class="form-hint">
              <i class="fas fa-lightbulb"></i>Choose a unique username that represents you
            </div>
          </div>

          <!-- Email Field -->
          <div class="profile-form-group">
            <label for="email" class="profile-form-label">
              <i class="fas fa-envelope"></i>Email Address<span class="required">*</span>
            </label>
            <input type="email" class="profile-input" name="email" id="email" value="<%= user.email %>" placeholder="Enter your email" required />
            <div class="form-hint">
              <i class="fas fa-shield-alt"></i>Your email is kept private and secure
            </div>
          </div>

          <!-- Bio Field -->
          <div class="profile-form-group">
            <label for="bio" class="profile-form-label">
              <i class="fas fa-pen"></i>Bio
            </label>
            <textarea class="profile-textarea" name="bio" id="bio" placeholder="Tell us about yourself..." maxlength="500" oninput="updateBioCounter()"><%= user.bio || '' %></textarea>
            <div class="char-counter" id="bioCounter">
              <%= (user.bio || '').length %> / 500 characters
            </div>
          </div>

          <!-- Form Actions -->
          <div class="profile-form-actions">
            <a href="/user/profile" class="btn-profile-cancel">
              <i class="fas fa-times"></i>
              <span>Cancel</span>
            </a>
            <button type="submit" class="btn-profile-submit">
              <i class="fas fa-save"></i>
              <span>Save Changes</span>
            </button>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>

<script>
  // Preview uploaded image
  function previewImage() {
    const preview = document.getElementById("image-preview");
    const file = document.getElementById("profilePicture").files[0];
    const currentImage = document.getElementById("currentProfilePicture");
    const badge = document.getElementById("preview-badge");

    if (file) {
      // Validate file size (5MB max)
      if (file.size > 5 * 1024 * 1024) {
        alert("File size must be less than 5MB");
        document.getElementById("profilePicture").value = "";
        return;
      }

      // Validate file type
      if (!file.type.match('image.*')) {
        alert("Please select an image file");
        document.getElementById("profilePicture").value = "";
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        preview.src = e.target.result;
        preview.style.display = "block";
        currentImage.style.display = "none";
        badge.style.display = "inline-block";
      };
      reader.readAsDataURL(file);
    } else {
      preview.style.display = "none";
      currentImage.style.display = "block";
      badge.style.display = "none";
    }
  }

  // Bio character counter
  function updateBioCounter() {
    const bio = document.getElementById('bio');
    const counter = document.getElementById('bioCounter');
    counter.textContent = `${bio.value.length} / 500 characters`;
  }

  // Form validation
  function validateForm() {
    const username = document.getElementById("username").value.trim();
    const email = document.getElementById("email").value.trim();

    if (!username) {
      alert("Username is required");
      document.getElementById("username").focus();
      return false;
    }

    if (username.length < 3) {
      alert("Username must be at least 3 characters long");
      document.getElementById("username").focus();
      return false;
    }

    if (!email) {
      alert("Email is required");
      document.getElementById("email").focus();
      return false;
    }

    // Email validation
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
      alert("Please enter a valid email address");
      document.getElementById("email").focus();
      return false;
    }

    return true;
  }

  // Initialize bio counter on page load
  document.addEventListener('DOMContentLoaded', function() {
    updateBioCounter();
  });
</script>

<%- include('partials/footer') %>