<%- include('partials/header', { title: 'Edit Post', user: user }) %>

<style>

  /* Edit Post Page Styles */
.edit-post-page {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
    padding: 60px 0;
}

.edit-post-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
}

.edit-post-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    animation: fadeInUp 0.6s ease-out;
}

.edit-post-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40px 50px;
    color: white;
}

.edit-post-header h1 {
    font-size: 36px;
    font-weight: bold;
    margin: 0 0 10px 0;
    display: flex;
    align-items: center;
    gap: 15px;
}

.edit-post-header h1 i {
    font-size: 32px;
}

.edit-post-header p {
    margin: 0;
    opacity: 0.9;
    font-size: 16px;
}

.edit-post-body {
    padding: 50px;
}

.edit-form-group {
    margin-bottom: 30px;
}

.edit-form-label {
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 16px;
}

.edit-form-label i {
    color: #667eea;
    font-size: 16px;
}

.edit-form-label .required {
    color: #dc3545;
    margin-left: 3px;
}

.edit-input {
    width: 100%;
    padding: 14px 20px;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #f8f9fa;
}

.edit-input:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
}

.edit-textarea {
    width: 100%;
    padding: 14px 20px;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    font-size: 16px;
    font-family: inherit;
    resize: vertical;
    min-height: 250px;
    transition: all 0.3s ease;
    background: #f8f9fa;
    line-height: 1.6;
}

.edit-textarea:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
}

/* File Upload Section */
.file-upload-section {
    margin-bottom: 30px;
}

.file-upload-area {
    border: 2px dashed #667eea;
    border-radius: 12px;
    padding: 30px;
    text-align: center;
    background: #f8f9fa;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
}

.file-upload-area:hover {
    background: #e9ecef;
    border-color: #764ba2;
}

.file-upload-area.dragover {
    background: #e3f2fd;
    border-color: #1976d2;
}

.file-upload-icon {
    font-size: 48px;
    color: #667eea;
    margin-bottom: 15px;
}

.file-upload-area h4 {
    color: #333;
    font-size: 18px;
    margin-bottom: 8px;
    font-weight: 600;
}

.file-upload-area p {
    color: #6c757d;
    margin: 0;
    font-size: 14px;
}

.file-upload-input-hidden {
    display: none;
}

/* Current Images */
.current-images {
    margin-top: 20px;
}

.current-images h5 {
    font-weight: 600;
    color: #333;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.current-images h5 i {
    color: #667eea;
}

.images-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 15px;
}

.image-preview-item {
    position: relative;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    aspect-ratio: 1;
}

.image-preview-item:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
}

.image-preview-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.image-remove-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    background: #dc3545;
    color: white;
    border: none;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    opacity: 0;
    transition: all 0.3s ease;
    font-size: 16px;
}

.image-preview-item:hover .image-remove-btn {
    opacity: 1;
}

.image-remove-btn:hover {
    background: #c82333;
    transform: scale(1.1);
}

/* New Images Preview */
.new-images-preview {
    margin-top: 15px;
}

.new-images-preview h6 {
    font-weight: 600;
    color: #667eea;
    margin-bottom: 10px;
    font-size: 14px;
}

/* Form Actions */
.edit-form-actions {
    display: flex;
    gap: 15px;
    padding-top: 30px;
    border-top: 1px solid #e9ecef;
}

.btn-edit-submit {
    flex: 1;
    padding: 14px 30px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 50px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
}

.btn-edit-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

.btn-edit-cancel {
    padding: 14px 30px;
    background: white;
    border: 2px solid #667eea;
    border-radius: 50px;
    color: #667eea;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
}

.btn-edit-cancel:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
}

/* Character Counter */
.char-counter {
    text-align: right;
    font-size: 13px;
    color: #6c757d;
    margin-top: 5px;
}

/* Back Link */
.back-to-post {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    margin-bottom: 30px;
    transition: all 0.3s ease;
    font-size: 16px;
}

.back-to-post:hover {
    color: #764ba2;
    transform: translateX(-5px);
}

.back-to-post i {
    font-size: 18px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .edit-post-page {
        padding: 30px 0;
    }
    
    .edit-post-header {
        padding: 30px 25px;
    }
    
    .edit-post-header h1 {
        font-size: 28px;
    }
    
    .edit-post-body {
        padding: 30px 25px;
    }
    
    .edit-form-actions {
        flex-direction: column;
    }
    
    .btn-edit-submit,
    .btn-edit-cancel {
        width: 100%;
        justify-content: center;
    }
    
    .images-grid {
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 10px;
    }
    
    .file-upload-area {
        padding: 20px;
    }
}

@media (max-width: 576px) {
    .edit-post-header h1 {
        font-size: 24px;
        flex-direction: column;
        gap: 10px;
    }
    
    .images-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}
</style>


<div class="edit-post-page">
  <div class="edit-post-container">
    
    <!-- Back Link -->
    <a href="/posts/<%= post._id %>" class="back-to-post">
      <i class="fas fa-arrow-left"></i>
      <span>Back to Post</span>
    </a>

    <!-- Edit Post Card -->
    <div class="edit-post-card">
      
      <!-- Header -->
      <div class="edit-post-header">
        <h1><i class="fas fa-edit"></i>Edit Post</h1>
        <p>Update your post content and images</p>
      </div>

      <!-- Body -->
      <div class="edit-post-body">
            <%# * Form used to update an existing post
                * Uses method-override (_method=PUT) because HTML forms only support GET & POST
                * enctype="multipart/form-data" is required for file (image) uploads
            %>
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          
          <!-- Title Field -->
          <div class="edit-form-group">
            <label for="title" class="edit-form-label"><i class="fas fa-heading"></i>Post Title<span class="required">*</span></label>
            <input type="text" class="edit-input" name="title" id="title" value="<%= post.title %>" placeholder="Enter post title..."
              required maxlength="200" oninput="updateTitleCounter()" />
            <div class="char-counter" id="titleCounter">
              <%= post.title.length %> / 200 characters
            </div>
          </div>

          <!-- Content Field -->
          <div class="edit-form-group">
            <label for="content" class="edit-form-label"><i class="fas fa-align-left"></i>Post Content<span class="required">*</span></label>
            <textarea class="edit-textarea" name="content" id="content" placeholder="Write your post content here..."
              required oninput="updateContentCounter()" ><%= post.content %></textarea>
            <div class="char-counter" id="contentCounter">
              <%= post.content.length %> characters
            </div>
          </div>

          <!-- Images Section -->
          <div class="file-upload-section">
            <label class="edit-form-label"><i class="fas fa-images"></i>Post Images</label>

            <!-- Current Images -->
            <% if (post.images && post.images.length > 0) { %>
              <div class="current-images">
                <h5><i class="fas fa-check-circle"></i>Current Images (<%= post.images.length %>)</h5>
                <div class="images-grid" id="currentImagesGrid">
                  <% post.images.forEach((image, index) => { %>
                    <div class="image-preview-item" data-index="<%= index %>">
                      <img src="<%= image.url %>" alt="Post image <%= index + 1 %>" class="image-preview-img" />
                      <button type="button" class="image-remove-btn" onclick="markImageForRemoval(<%= index %>)" title="Remove this image" >
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                  <% }) %>
                </div>
              </div>
            <% } %>

            <!-- Upload New Images -->
            <div style="margin-top: 20px;">
              <div class="file-upload-area" onclick="document.getElementById('imageInput').click()">
                <div class="file-upload-icon">
                  <i class="fas fa-cloud-upload-alt"></i>
                </div>
                <h4>Upload New Images</h4>
                <p>Click to browse or drag and drop files here</p>
                <p style="font-size: 12px; margin-top: 5px;">Supported: JPG, PNG (Max 5MB each)</p>
              </div>
              <input type="file" class="file-upload-input-hidden" name="image" id="imageInput" accept="image/jpeg, image/png, image/jpg" 
                multiple onchange="previewNewImages(event)" />
            </div>

            <!-- New Images Preview -->
            <div class="new-images-preview" id="newImagesPreview" style="display: none;">
              <h6>New Images to Upload:</h6>
              <div class="images-grid" id="newImagesGrid"></div>
            </div>
          </div>

          <!-- Hidden inputs for images to remove -->
          <input type="hidden" name="removeImages" id="removeImagesInput" value="">

          <!-- Form Actions -->
          <div class="edit-form-actions">
            <a href="/posts/<%= post._id %>" class="btn-edit-cancel">
              <i class="fas fa-times"></i><span>Cancel</span>
            </a>
            <button type="submit" class="btn-edit-submit">
              <i class="fas fa-save"></i><span>Update Post</span>
            </button>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>


<script>
    // Character counters
    function updateTitleCounter() {
      const title = document.getElementById('title');
      const counter = document.getElementById('titleCounter');
      counter.textContent = `${title.value.length} / 200 characters`;
    }

    function updateContentCounter() {
      const content = document.getElementById('content');
      const counter = document.getElementById('contentCounter');
      counter.textContent = `${content.value.length} characters`;
    }

    // Track images to remove
    let imagesToRemove = [];

    function markImageForRemoval(index) {
      if (confirm('Are you sure you want to remove this image?')) {
        imagesToRemove.push(index);
        document.getElementById('removeImagesInput').value = imagesToRemove.join(',');
        
        // Hide the image
        const imageItem = document.querySelector(`[data-index="${index}"]`);
        imageItem.style.opacity = '0.3';
        imageItem.style.pointerEvents = 'none';
      }
    }

    // Preview new images
    function previewNewImages(event) {
      const files = event.target.files;
      const preview = document.getElementById('newImagesPreview');
      const grid = document.getElementById('newImagesGrid');
      
      if (files.length > 0) {
        preview.style.display = 'block';
        grid.innerHTML = '';
        
        Array.from(files).forEach((file, index) => {
          const reader = new FileReader();
          
          reader.onload = function(e) {
            const div = document.createElement('div');
            div.className = 'image-preview-item';
            div.innerHTML = `
              <img src="${e.target.result}" alt="New image ${index + 1}" class="image-preview-img">
            `;
            grid.appendChild(div);
          };
          
          reader.readAsDataURL(file);
        });
      } else {
        preview.style.display = 'none';
      }
    }

    // Drag and drop support
    const uploadArea = document.querySelector('.file-upload-area');

    uploadArea.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadArea.classList.add('dragover');
    });

    uploadArea.addEventListener('dragleave', () => {
      uploadArea.classList.remove('dragover');
    });

    uploadArea.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadArea.classList.remove('dragover');
      
      const input = document.getElementById('imageInput');
      input.files = e.dataTransfer.files;
      previewNewImages({ target: input });
    });
</script>


