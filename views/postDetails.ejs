
<%# ---------------- Include Header Partial ---------------- %>
<%- include('partials/header', { title, user: user }) %>

<style>

/* Post Details Page Styles */
.post-detail-page {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
    padding: 60px 0;
}

.post-detail-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
}

.post-detail-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Post Header */
.post-detail-header {
    padding: 50px 50px 30px;
    border-bottom: 1px solid #e9ecef;
}

.post-detail-title {
    font-size: 42px;
    font-weight: bold;
    color: #333;
    margin-bottom: 25px;
    line-height: 1.3;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.post-detail-meta {
    display: flex;
    align-items: center;
    gap: 25px;
    flex-wrap: wrap;
    color: #6c757d;
    font-size: 15px;
}

.post-meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
}

.post-meta-item i {
    color: #667eea;
    font-size: 16px;
}

.post-author-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 16px;
}

.post-author-name {
    font-weight: 600;
    color: #667eea;
}

/* Post Content */
.post-detail-content {
    padding: 40px 50px;
    font-size: 18px;
    line-height: 1.8;
    color: #333;
}

.post-detail-content p {
    margin-bottom: 20px;
    white-space: pre-wrap;
    word-wrap: break-word;
}

/* Post Images */
.post-detail-images {
    padding: 0 50px 40px;
}

.post-images-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

.post-image-wrapper {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    cursor: pointer;
}

.post-image-wrapper:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 30px rgba(102, 126, 234, 0.3);
}

.post-detail-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    display: block;
}

/* Single image should be larger */
.post-images-grid.single-image .post-detail-image {
    height: 500px;
}

/* Actions Section */
.post-detail-actions {
    padding: 30px 50px;
    border-top: 1px solid #e9ecef;
    background: #f8f9fa;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 15px;
    flex-wrap: wrap;
}

.post-actions-left {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
}

.btn-post-action {
    padding: 12px 30px;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 15px;
}

.btn-edit {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.btn-edit:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    color: white;
}

.btn-delete {
    background: white;
    color: #dc3545;
    border: 2px solid #dc3545;
}

.btn-delete:hover {
    background: #dc3545;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(220, 53, 69, 0.3);
}

.btn-back {
    background: white;
    color: #667eea;
    border: 2px solid #667eea;
}

.btn-back:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
}

/* Back to Posts Link */
.back-to-posts {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    margin-bottom: 30px;
    transition: all 0.3s ease;
    font-size: 16px;
}

.back-to-posts:hover {
    color: #764ba2;
    transform: translateX(-5px);
}

.back-to-posts i {
    font-size: 18px;
}

/* Image Lightbox Modal */
.image-modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    animation: fadeIn 0.3s ease;
}

.image-modal.active {
    display: flex;
    align-items: center;
    justify-content: center;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.modal-content-wrapper {
    max-width: 90%;
    max-height: 90%;
    position: relative;
}

.modal-image {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
    border-radius: 10px;
}

.modal-close {
    position: absolute;
    top: -40px;
    right: -40px;
    color: white;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
    transition: transform 0.3s ease;
}

.modal-close:hover {
    transform: scale(1.2);
}

/* No Images Message */
.no-images {
    padding: 40px;
    text-align: center;
    color: #6c757d;
    font-style: italic;
}

/* Responsive Design */
@media (max-width: 768px) {
    .post-detail-page {
        padding: 30px 0;
    }
    
    .post-detail-header,
    .post-detail-content,
    .post-detail-images {
        padding-left: 25px;
        padding-right: 25px;
    }
    
    .post-detail-actions {
        padding: 20px 25px;
        flex-direction: column;
        align-items: stretch;
    }
    
    .post-actions-left {
        flex-direction: column;
        width: 100%;
    }
    
    .btn-post-action {
        width: 100%;
        justify-content: center;
    }
    
    .post-detail-title {
        font-size: 32px;
    }
    
    .post-detail-content {
        font-size: 16px;
    }
    
    .post-detail-meta {
        gap: 15px;
        font-size: 14px;
    }
    
    .post-images-grid {
        grid-template-columns: 1fr;
        gap: 15px;
    }
    
    .post-detail-image {
        height: 250px;
    }
    
    .modal-close {
        top: 10px;
        right: 10px;
        font-size: 30px;
    }
}

@media (max-width: 576px) {
    .post-detail-header {
        padding-top: 30px;
    }
    
    .post-detail-title {
        font-size: 26px;
    }
    
    .post-detail-content {
        font-size: 15px;
        padding: 30px 20px;
    }
    
    .post-detail-image {
        height: 200px;
    }
}
</style>


<div class="post-detail-page">
  <div class="post-detail-container">
    
    <!-- Back to Posts Link -->
    <a href="/posts" class="back-to-posts">
      <i class="fas fa-arrow-left"></i>
      <span>Back to All Posts</span>
    </a>

    <!-- Post Card -->
    <div class="post-detail-card">
      
      <!-- Post Header -->
      <div class="post-detail-header">
        <h1 class="post-detail-title"><%= post?.title %></h1>
        
        <div class="post-detail-meta">
          <div class="post-meta-item">
            <div class="post-author-avatar">
              <%= post?.author?.username?.charAt(0).toUpperCase() %>
            </div>
            <span class="post-author-name"><%= post?.author?.username %></span>
          </div>
          
          <div class="post-meta-item">
            <i class="fas fa-calendar-alt"></i>
            <span><%= post?.createdAt?.toDateString() %></span>
          </div>
          
          <div class="post-meta-item">
            <i class="fas fa-clock"></i>
            <span><%= Math.ceil(post?.content?.split(' ').length / 200) %> min read</span>
          </div>
          
          <% if (post?.images && post?.images?.length > 0) { %>
            <div class="post-meta-item">
              <i class="fas fa-images"></i>
              <span><%= post?.images?.length %> <%= post?.images?.length === 1 ? 'Image' : 'Images' %></span>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Post Content -->
      <div class="post-detail-content">
        <p><%= post?.content %></p>
      </div>

      <!-- Post Images -->
      <% if (post?.images && post?.images?.length > 0) { %>

        <div class="post-detail-images">
          <div class="post-images-grid <%= post?.images?.length === 1 ? 'single-image' : '' %>">
            <% post?.images?.forEach((image, index) => { %>
              <div class="post-image-wrapper" onclick="openImageModal('<%= image.url %>')">
                <img src="<%= image.url %>" alt="Post image <%= index + 1 %>"  class="post-detail-image" loading="lazy" />
              </div>
            <% }) %>
          </div>
        </div>
        
      <% } %>


      


      <!-- Action Buttons -->
      <div class="post-detail-actions">
        <div class="post-actions-left">
          <a href="/posts" class="btn-post-action btn-back"><i class="fas fa-arrow-left"></i><span>All Posts</span></a>
        </div>
        
        <% if (user?._id?.toString() === post?.author?._id?.toString()) { %>
          <div class="post-actions-left">
            <a href="/post/<%= post?._id %>/edit" class="btn-post-action btn-edit">
              <i class="fas fa-edit"></i>
              <span>Edit Post</span>
            </a>
            <a href="/post/<%= post?._id %>/delete" class="btn-post-action btn-delete"
              onclick="return confirm('Are you sure you want to delete this post? This action cannot be undone.')"
            >
              <i class="fas fa-trash-alt"></i>
              <span>Delete Post</span>
            </a>
          </div>
        <% } %>
      </div>


      <!-- Post Comments -->
      <div>
        <h3>Comments</h3>

        <!-- Check if user is logged in -->
        <% if (user) { %>

          <form action="/posts/<%= post?._id %>/comments" method="post">
            <textarea name="content" id="commentText" rows="5" placeholder="Add Comment" required ></textarea> 
            <input type="submit" value="Comment" />
          </form>

        <% } else { %>
          <p>Please <a href="/auth/login">login</a> to a comment</p>
        <% } %>

      </div>


      <!--  Comments List -->
      <% if( post?.comments?.length > 0 ) { %>

        <% post?.comments?.forEach(( comment )=> { %>
          <div>
            <small><%= comment?.author?.username %></small>
            <p><%= comment?.content %></p>
          </div>
        <% } ) %>

      
      <% } else { %>
        <p>No comments yet.</p>
      <% } %>

      
    </div>

  </div>
</div>


<!-- Image Lightbox Modal -->
<div id="imageModal" class="image-modal" onclick="closeImageModal()">
  <div class="modal-content-wrapper" onclick="event.stopPropagation()">
    <span class="modal-close" onclick="closeImageModal()">&times;</span>
    <img id="modalImage" class="modal-image" src="" alt="Full size image">
  </div>
</div>


<script>
function openImageModal(imageUrl) {
  const modal = document.getElementById('imageModal');
  const modalImg = document.getElementById('modalImage');
  modal.classList.add('active');
  modalImg.src = imageUrl;
  document.body.style.overflow = 'hidden';
}

function closeImageModal() {
  const modal = document.getElementById('imageModal');
  modal.classList.remove('active');
  document.body.style.overflow = 'auto';
}

// Close modal on Escape key
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeImageModal();
  }
});
</script>


