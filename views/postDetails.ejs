<div class="post-detail-page">
  <div class="post-detail-container">
    
    <!-- Back to Posts Link -->
    <a href="/posts" class="back-to-posts">
      <i class="fas fa-arrow-left"></i>
      <span>Back to All Posts</span>
    </a>

    <!-- Post Card -->
    <div class="post-detail-card">
      
      <!-- Post Header -->
      <div class="post-detail-header">
        <h1 class="post-detail-title"><%= post?.title %></h1>
        
        <div class="post-detail-meta">
          <div class="post-meta-item">
            <div class="post-author-avatar">
              <%= post?.author?.username?.charAt(0).toUpperCase() %>
            </div>
            <span class="post-author-name"><%= post?.author?.username %></span>
          </div>
          
          <div class="post-meta-item">
            <i class="fas fa-calendar-alt"></i>
            <span><%= post?.createdAt?.toDateString() %></span>
          </div>
          
          <div class="post-meta-item">
            <i class="fas fa-clock"></i>
            <span><%= Math.ceil(post?.content?.split(' ').length / 200) %> min read</span>
          </div>
          
          <% if (post?.images && post?.images?.length > 0) { %>
            <div class="post-meta-item">
              <i class="fas fa-images"></i>
              <span><%= post?.images?.length %> <%= post?.images?.length === 1 ? 'Image' : 'Images' %></span>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Post Content -->
      <div class="post-detail-content">
        <p><%= post?.content %></p>
      </div>

      <!-- Post Images -->
      <% if (post?.images && post?.images?.length > 0) { %>

        <div class="post-detail-images">
          <div class="post-images-grid <%= post?.images?.length === 1 ? 'single-image' : '' %>">
            <% post?.images?.forEach((image, index) => { %>
              <div class="post-image-wrapper" onclick="openImageModal('<%= image.url %>')">
                <img src="<%= image.url %>" alt="Post image <%= index + 1 %>"  class="post-detail-image" loading="lazy" />
              </div>
            <% }) %>
          </div>
        </div>
        
      <% } %>


      <!-- Action Buttons -->
      <div class="post-detail-actions">
        <div class="post-actions-left">
          <a href="/posts" class="btn-post-action btn-back"><i class="fas fa-arrow-left"></i><span>All Posts</span></a>
        </div>
        
        <% if (user?._id?.toString() === post?.author?._id?.toString()) { %>
          <div class="post-actions-left">
            <a href="/posts/<%= post?._id %>/edit" class="btn-post-action btn-edit">
              <i class="fas fa-edit"></i>
              <span>Edit Post</span>
            </a>
            <a href="/posts/<%= post?._id %>/delete" class="btn-post-action btn-delete"
              onclick="return confirm('Are you sure you want to delete this post? This action cannot be undone.')"
            >
              <i class="fas fa-trash-alt"></i>
              <span>Delete Post</span>
            </a>
          </div>
        <% } %>
      </div>


      <!-- Post Comments Section -->
      <div class="post-comments-section">
        <div class="comments-header">
          <h3>Comments</h3>
          <span class="comments-count"><%= post?.comments?.length || 0 %></span>
        </div>

        <!-- Comment Form (Only show if user is logged in) -->
        <% if (user) { %>

          <form class="comment-form" action="/posts/<%= post?._id %>/comments" method="POST">
            <div class="comment-form-header">
              <div class="comment-user-avatar">
                <%= user?.username?.charAt(0).toUpperCase() %>
              </div>
              <div class="comment-form-info">
                <p><%= user?.username %></p>
                <span>Share your thoughts...</span>
              </div>
            </div>

            <div class="comment-textarea-wrapper">
              <textarea name="content" id="commentText" class="comment-textarea" placeholder="Write your comment here... (Max 500 characters)" required
                maxlength="500"oninput="updateCharCount()"></textarea>
              <span class="comment-char-count" id="charCount">0 / 500</span>
            </div>

            <div class="comment-form-actions">
              <div class="comment-form-hint">
                <i class="fas fa-info-circle"></i>
                <span>Be respectful and constructive</span>
              </div>
              <button type="submit" class="btn-comment-submit" id="submitBtn">
                <i class="fas fa-paper-plane"></i>
                <span>Post Comment</span>
              </button>
            </div>
          </form>

        <% } else { %>
          <!-- Login Prompt -->
          <div class="login-to-comment">
            <i class="fas fa-comments"></i>
            <p>You need to be logged in to leave a comment</p>
            <a href="/auth/login" class="btn-login-comment">
              <i class="fas fa-sign-in-alt"></i>
              <span>Login to Comment</span>
            </a>
          </div>
        <% } %>


        <!-- Comments List -->
        <% if (post?.comments && post?.comments?.length > 0) { %>

        <div class="comments-list">
            <% post?.comments?.forEach((comment, index) => { %>
            <div class="comment-item" id="comment-<%= index %>">
                <div class="comment-header">
                <div class="comment-avatar">
                    <%= comment?.author?.username?.charAt(0).toUpperCase() %>
                </div>
                <div class="comment-info">
                    <div class="comment-author">
                    <%= comment?.author?.username %>
                    </div>
                    <div class="comment-date">
                    <i class="far fa-clock"></i>
                    <span><%= comment?.createdAt?.toDateString() %></span>
                    </div>
                </div>
                
                <!-- Edit/Delete Actions (Only show for comment author) -->
                <% if (user && user?._id?.toString() === comment?.author?._id?.toString()) { %>
                    <div class="comment-actions">
                    <button class="btn-comment-action btn-edit-comment" onclick="toggleEditComment(<%= index %>)" >
                        <i class="fas fa-edit"></i><span>Edit</span>
                    </button>
                    <form action="/post/<%= post?._id %>/comment/<%= index %>/delete" method="POST" style="display: inline;"
                        onsubmit="return confirm('Are you sure you want to delete this comment?')" >
                        <button type="submit" class="btn-comment-action btn-delete-comment">
                        <i class="fas fa-trash-alt"></i> <span>Delete</span>
                        </button>
                    </form>
                    </div>
                <% } %>
                </div>
                
                <!-- Comment Content (View Mode) -->
                <div class="comment-content" id="comment-content-<%= index %>">
                <%= comment?.content %>
                </div>
                
                <!-- Comment Edit Form (Hidden by default) -->
                <div class="comment-edit-form" id="comment-edit-<%= index %>" style="display: none;">
                    <form action="/post/<%= post?._id %>/comment/<%= index %>/edit" method="POST">
                        <textarea name="content" class="comment-edit-textarea" required><%= comment?.content %></textarea>
                        <div class="comment-edit-actions">
                            <button type="button" class="btn-cancel-comment" onclick="toggleEditComment(<%= index %>)">Cancel</button>
                            <button type="submit" class="btn-save-comment"><i class="fas fa-save"></i> Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>

        <% } else { %>
        <!-- No Comments Yet -->
        <div class="no-comments">
            <i class="far fa-comments"></i>
            <p>No comments yet. Be the first to share your thoughts!</p>
        </div>
        <% } %>

      </div>

    </div>
  </div>
</div>


<!-- Image Lightbox Modal -->
<div id="imageModal" class="image-modal" onclick="closeImageModal()">
  <div class="modal-content-wrapper" onclick="event.stopPropagation()">
    <span class="modal-close" onclick="closeImageModal()">&times;</span>
    <img id="modalImage" class="modal-image" src="" alt="Full size image">
  </div>
</div>


<script>
function openImageModal(imageUrl) {
  const modal = document.getElementById('imageModal');
  const modalImg = document.getElementById('modalImage');
  modal.classList.add('active');
  modalImg.src = imageUrl;
  document.body.style.overflow = 'hidden';
}

function closeImageModal() {
  const modal = document.getElementById('imageModal');
  modal.classList.remove('active');
  document.body.style.overflow = 'auto';
}

// Close modal on Escape key
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeImageModal();
  }
});

// Toggle edit mode for comments
function toggleEditComment(index) {
  const contentDiv = document.getElementById(`comment-content-${index}`);
  const editForm = document.getElementById(`comment-edit-${index}`);
  
  if (editForm.style.display === 'none') {
    contentDiv.style.display = 'none';
    editForm.style.display = 'block';
  } else {
    contentDiv.style.display = 'block';
    editForm.style.display = 'none';
  }
}

// Character counter for comment textarea
function updateCharCount() {
  const textarea = document.getElementById('commentText');
  const charCount = document.getElementById('charCount');
  const submitBtn = document.getElementById('submitBtn');
  
  if (textarea && charCount) {
    const length = textarea.value.length;
    charCount.textContent = `${length} / 500`;
    
    if (length > 0) {
      submitBtn.disabled = false;
    } else {
      submitBtn.disabled = true;
    }
  }
}

// Initialize
document.addEventListener('DOMContentLoaded', function() {
  const submitBtn = document.getElementById('submitBtn');
  if (submitBtn) {
    submitBtn.disabled = true;
  }
});

</script>


